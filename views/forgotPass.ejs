

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>&nbsp;New Password Here</h1>
      <% include ./partials/messages %>
      <form action="/users/changePass" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for=" newpassword1">New Password</label>
          <input
            type="password"
            id="newpassword1"
            name="newpassword1"
            class="form-control"
            placeholder="Enter New Password"
            value="<%= typeof newpassword1 != 'undefined' ? newpassword1 : '' %>"
          />
        </div>
        <div class="form-group">
            <label for="newpassword2">Confirm Password</label>
            <input
              type="password"
              id="newpassword2"
              name="newpassword2"
              class="form-control"
              placeholder="Confirm New Password"
              value="<%= typeof newpassword2 != 'undefined' ? newpassword2 : '' %>"
            />
          </div>
        <button type="submit" class="btn btn-primary btn-block">Change</button>
      </form>

    </div>
  </div>
</div>
