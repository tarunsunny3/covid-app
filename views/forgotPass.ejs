<% include ./partials/navBar %>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Change Your Password Here</h1>
      <% include ./partials/messages %>
      <form action="/users/changePass" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="oldpassword">Password</label>
          <input
            type="password"
            id="oldpassword"
            name="oldpassword"
            class="form-control"
            placeholder="Enter Old Password"
            value="<%= typeof oldpassword != 'undefined' ? oldpassword : '' %>"
          />
        </div>
        <div class="form-group">
            <label for="newpassword">Password</label>
            <input
              type="password"
              id="newpassword"
              name="newpassword"
              class="form-control"
              placeholder="Enter New Password"
              value="<%= typeof newpassword != 'undefined' ? newpassword : '' %>"
            />
          </div>
        <button type="submit" class="btn btn-primary btn-block">Change</button>
      </form>

    </div>
  </div>
</div>
