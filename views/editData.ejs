<% include ./partials/navBar %>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-edit"></i> Update
      </h1>
      <% include ./partials/messages %>
      <form action="/users/editData" method="POST">
      
      <input type="hidden" name="_id" id="_id" class="form-control" value="<%= user._id%>">
      
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= user.name %>"
          />
        </div>
        <div class="form-group">
            <label for="family">Number of family members</label>
            <input
                type="text"
                id="family"
                name="family"
                class="form-control"
                placeholder="Enter total number of family members"
                value="<%= user.numbOfFamilyMembers%>"
            />
        </div>
        <label for="covid">Are you covid Positive: </label><br>
        <div class="form-check">
            
            <input
                type="radio"
                id="covid"
                name="covid"
                checked='<%= user.isCovidPositive==true? true: false %>'
                class="form-check-input"
                value="Yes"
            />
            <label for="covid">Yes</label>
            </div>
        <div class="form-check">
            <input
                type="radio"
                id="covidNo"
                name="covid"
                checked='<%=user.isCovidPositive==false? true: false %>'
                class="form-check-input"
                value="No"
            />
            <label for="covidNo">No</label>
        </div>
        <button type="submit" class="btn btn-warning btn-block">
          Update
        </button>
      </form>
    </div>
  </div>
</div>
<% include ./partials/footer %>